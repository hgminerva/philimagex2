<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>DMTiPACS - Home</title>

    <!-- Styles  -->
    @Styles.Render("~/Content/css")
</head>
<body>
    <!-- Navbar -->
    @Html.Partial("HomeHeader")

    <!-- Header -->
    <div class="intro-header">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="intro-message">
                        <h1>DMTiPACS</h1>
                        <h2>Image Solutions</h2>
                        <br />
                        <div class="title-description">DMTiPACS provides one workspace for the clinical tools and applications for physicians and radiologists need for convenient local and remote reporting.</div>
                        <hr class="intro-divider">
                        <ul class="list-inline intro-social-buttons">
                            <li>
                                <a href="/Manage/Index" class="btn btn-primary btn-lg btn-custom-size"><i class="fa fa-check fa-fw"></i> Get Stared</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.container -->
    </div>
    <!-- /.intro-header -->
    <!-- Page Content -->
    <a name="about"></a>
    <div class="content-section-a">
        <div class="container">
            <div class="row">
                <div class="col-lg-5 col-sm-6">
                    <hr class="section-heading-spacer">
                    <div class="clearfix"></div>
                    <h2 class="section-heading">DMTiPACS Image Solutions</h2>
                    <p class="lead">DMTiPACS provides one workspace for the clinical tools and applications for physicians and radiologists need for convenient local and remote reporting.</p>
                </div>
                <div class="col-lg-5 col-lg-offset-2 col-sm-6">
                    <img class="img-responsive" src="~/Images/ipad.png" alt="">
                </div>
            </div>
        </div>
        <!-- /.container -->
    </div>

    <a name="contact"></a>
    <!-- /.content-section-a -->
    <div class="content-section-b">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <ul class="list-group banner-list">
                        <li class="list-group-item"><i class="fa fa-map-marker fa-fw"></i> Cebu City, Philippines 6000</li>
                        <li class="list-group-item"><i class="fa fa-phone fa-fw"></i> +63 32 2663773</li>
                        <li class="list-group-item">Support: <a href="#">Support@DMTiPACS.com</a></li>
                        <li class="list-group-item">Marketing: <a href="#">Marketing@DMTiPACS.com</a></li>
                    </ul>
                </div>
                <div class="col-md-8">
                    <div class="img-responsive img-thumbnail" style='overflow: hidden; height: 400px; width: 100%;'>
                        <script src='https://maps.googleapis.com/maps/api/js?v=3.exp&key=AIzaSyAnGzUqbgnhr0Ainxl_aU5g7E4pUbWoHqg'></script>
                        <div id='gmap_canvas' style='height:400px; width:100%;'></div>
                        <style>
                            #gmap_canvas img {
                                max-width: none !important;
                                background: none !important;
                            }
                        </style>
                        <a href='https://mapswebsite.org/'>mapswebsite</a>
                        <script type='text/javascript' src='https://embedmaps.com/google-maps-authorization/script.js?id=7aca4a0a0430773dffa6f863e0deb3241ad124fa'></script>
                        <script type='text/javascript'>
                            function init_map() {
                                var myOptions = {
                                    zoom: 16,
                                    center: new google.maps.LatLng(10.3098543, 123.89315590000001),
                                    mapTypeId: google.maps.MapTypeId.ROADMAP
                                };

                                map = new google.maps.Map(document.getElementById('gmap_canvas'), myOptions);
                                marker = new google.maps.Marker({
                                    map: map, position: new google.maps.LatLng(10.3098543, 123.89315590000001)
                                });

                                infowindow = new google.maps.InfoWindow({
                                    content: '<strong>DMTIpacs</strong><br>Fuente Osmeña<br>6000 Cebu City<br>'
                                });

                                google.maps.event.addListener(marker, 'click', function () { infowindow.open(map, marker); }); infowindow.open(map, marker);
                            }

                            google.maps.event.addDomListener(window, 'load', init_map);</script>
                    </div>

                </div>
            </div>
        </div>
        <!-- /.container -->
    </div>

    <!-- Footer -->
    @Html.Partial("HomeFooter")

    <!-- Scripts -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>











